  <script>
    // Set current year
    document.getElementById('year').textContent = new Date().getFullYear();

    // Smooth keyboard focus for thumbnails
    document.querySelectorAll('.thumbnail').forEach((el, i) => {
      el.addEventListener('keyup', (e) => { if(e.key === 'Enter') openLightbox(i) });
    });

    // Portfolio metadata (replace with your real case summaries)
    const portfolio = [
      {title:'Investor Pitch Deck', type:'presentations', image:'/assets/portfolio-1.jpg', summary:'Challenge: need concise investor story.\nSolution: 18-slide deck with clear hierarchy.\nDeliverables: editable Canva file, MP4 export.'},
      {title:'Instagram Carousel', type:'social', image:'/assets/portfolio-2.jpg', summary:'A 6-card carousel to boost engagement with clear CTAs.'},
      {title:'Brand Kit', type:'branding', image:'/assets/portfolio-3.jpg', summary:'Logo, palette, and brand usage notes.'},
      {title:'Pitch Deck — SaaS', type:'presentations', image:'/assets/portfolio-4.jpg', summary:'18-slide investor-ready deck with animated export.'},
      {title:'Social Template Pack', type:'social', image:'/assets/portfolio-5.jpg', summary:'10 editable post templates for Instagram & Facebook.'},
      {title:'Logo & Palette', type:'branding', image:'/assets/portfolio-6.jpg', summary:'Logo variations and color system.'}
    ];

    function openLightbox(idx){
      const lb = document.getElementById('lightbox');
      const c = document.getElementById('lbContent');
      const p = portfolio[idx] || {};
      c.innerHTML = `<div style="display:flex;gap:16px;flex-wrap:wrap"><img src="${p.image}" alt="${p.title}" style="width:320px;height:240px;object-fit:cover;border-radius:10px"><div style="max-width:460px"><h3>${p.title}</h3><p style='white-space:pre-line;color:var(--muted)'>${p.summary}</p><p><strong>Deliverables:</strong> Editable Canva files, exports</p></div></div>`;
      lb.classList.add('show');
      lb.setAttribute('aria-hidden','false');
    }
    function closeLightbox(e){
      const lb = document.getElementById('lightbox');
      lb.classList.remove('show');
      lb.setAttribute('aria-hidden','true');
    }

    // Filters
    document.querySelectorAll('[data-filter]').forEach(btn=>{
      btn.addEventListener('click',()=>{
        const f = btn.getAttribute('data-filter');
        document.querySelectorAll('#portfolioGrid .thumbnail').forEach(th=>{
          th.style.display = (f==='all' || th.dataset.type===f) ? 'block' : 'none';
        })
      })
    })

    // Basic form handler (client-side). Replace with Formspree/Netlify in production.
    function handleSubmit(e){
      e.preventDefault();
      const form = document.getElementById('contactForm');
      const data = {
        name: form.name.value,
        email: form.email.value,
        message: form.message.value,
        pref: form.pref.value
      };
      // Basic validation
      if(!data.name || !data.email || !data.message){
        alert('Please fill all required fields.');
        return;
      }
      // Example: open mailto with prefilled body (fallback)
      const subject = encodeURIComponent('New message from website');
      const body = encodeURIComponent(`Name: ${data.name}\nEmail: ${data.email}\nPreferred: ${data.pref}\n\n${data.message}`);
      window.location.href = `mailto:yourname@?subject=${subject}&body=${body}`;
    }

    // Keyboard accessibility for dialog
    document.addEventListener('keydown', (e)=>{ if(e.key==='Escape') closeLightbox(); });

  </script>
</body>
